<% layout("layout") %>

<h2>Add a Civic Issue</h2>
<form action="/citizen/add" method="POST" enctype="multipart/form-data">
    <label for="type">Type of Problem:</label>
    <select id="type" name="type" required>
        <option value="" disabled selected>Select a problem</option>
        <option value="electricity">Electricity</option>
        <option value="parking">Parking</option>
        <option value="pothole">Pothole</option>
    </select>

    <label for="image">Upload Image:</label>
    <input type="file" id="image" name="image" accept="image/*" required>

    <label for="details">Description:</label>
    <textarea id="details" name="details" required></textarea>

    <label for="severity">Severity (1-5):</label>
    <input type="number" id="severity" name="severity" min="1" max="5" required>

    <label for="location">Location:</label>
    <input type="text" id="location" name="location" required>

    <button type="submit">Add Issue</button>
</form>

